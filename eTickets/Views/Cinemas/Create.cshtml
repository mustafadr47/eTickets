@model Cinema
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@using System.Globalization;
@if (CultureInfo.CurrentCulture.Name.StartsWith("ar"))
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.rtl.min.css"
      integrity="sha384-gXt9imSW0VcJVHezoNQsP+TNrjYXoGcrqBZJpry9zJt8PCQjobwmhMGaDHTASo9N"
      crossorigin="anonymous">
           <style>.cr{direction:rtl;}</style>
}
@{
    ViewData["Title"] = localizer["Add a new cinema"];
}
<div class="container text cr">
    <div class="col-md-8 offset-2">
        <p>
            <h1>@localizer["Add a Neew Cineam"]</h1>
        </p>
        <div class="container">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-4 text-center">
                        <img id="CineamLogoPreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="mb-4">
                        <label asp-for="Logo" class=""></label>
                        <input asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input type="submit" value="@localizer["Create"]" class="btn btn-outline-success float-lg-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">@localizer["Show All"]</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('CineamLogoPreview');
            output.src = $("#Logo").val();
        })
        $("#Logo").on("change", function () {
            var output = document.getElementById('CineamLogoPreview');
            output.src = $(this).val();
        })
    </script>
}