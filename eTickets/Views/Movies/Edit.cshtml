@using eTickets.Data.Enums;
@using eTickets.Data.ViewModels;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@model NewMovieVM
@using System.Globalization;
@if (CultureInfo.CurrentCulture.Name.StartsWith("ar"))
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.rtl.min.css"
      integrity="sha384-gXt9imSW0VcJVHezoNQsP+TNrjYXoGcrqBZJpry9zJt8PCQjobwmhMGaDHTASo9N"
      crossorigin="anonymous">
           <style>.cr{direction:rtl;}</style>
}
@{
    ViewData["Title"] = localizer["Update movie"];
}

<div class="row cr">
    <div class="col-md-8 offset-2">
        <p>
            <h4 class="text-white">@localizer["Uppdate movie"]</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label asp-for="Name" class="control-label text-white"></label>
                                <input asp-for="Name" class="form-control bg-warning" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="mb-4">
                                <label asp-for="StartDate" class="control-label text-white"></label>
                                <input asp-for="StartDate" type="date" class="form-control bg-warning" />
                                <span asp-validation-for="StartDate" class="text-danger "></span>
                            </div>
                            <div class="mb-4">
                                <label asp-for="EndDate" class="control-label text-white"></label>
                                <input asp-for="EndDate" type="date" class="form-control bg-warning" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                            <div class="mb-4">
                                <label asp-for="Price" class="control-label text-white"></label>
                                <input asp-for="Price" type="number" class="form-control bg-warning" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="mb-4">
                                <label asp-for="ImageURL" class="control-label text-white"></label>
                                <input asp-for="ImageURL" class="form-control bg-warning" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label asp-for="CinemaId" class="control-label text-white"></label>
                                <select asp-for="CinemaId" class="form-control form-select bg-warning" asp-items="ViewBag.Cinemas"></select>
                                <span asp-validation-for="CinemaId" class="text-danger"></span>
                            </div>
                            <div class="mb-4">
                                <label asp-for="MovieCategory" class="control-label text-white"></label>
                                <select asp-for="MovieCategory" class="form-control form-select bg-warning" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
                                <span asp-validation-for="MovieCategory" class="text-danger"></span>
                            </div>
                            <div class="mb-4">
                                <label asp-for="ProducerId" class="control-label text-white"></label>
                                <select asp-for="ProducerId" class="form-control form-select bg-warning" asp-items="ViewBag.Producers"></select>
                                <span asp-validation-for="ProducerId" class="text-danger"></span>
                            </div>
                            <div class="mb-4">
                                <label asp-for="ActorIds" class="control-label text-white"></label>
                                <select asp-for="ActorIds" class="form-control form-select bg-warning" asp-items="ViewBag.Actors" multiple></select>
                                <span asp-validation-for="ActorIds" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-4">
                                <label asp-for="Description" class="control-label text-white"></label>
                                <textarea asp-for="Description" class="form-control bg-warning"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img style="width:100%" id="ImageUrlPreview" />
                    </div>

                    <div class="mb-4">
                        
                        <input type="submit" value="@localizer["Update"]" class="btn btn-outline-warning float-lg-end" />
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger float-lg-end me-2"> @localizer["Delete"]</a>
                        <a class="btn btn-outline-light" asp-action="Index">@localizer["Show all"]</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $("#ImageURL").val();
        });

        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}